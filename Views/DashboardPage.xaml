<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PetAdoptM.Views.DashboardPage"
             Title="PetAdopt">
    <VerticalStackLayout VerticalOptions="Center" Spacing="20" Margin="20">

        <Image
                Source="petadopt.png"
                SemanticProperties.Description="PetAdopt"
                HeightRequest="200"
                HorizontalOptions="Center" />

        <Label
                Text="PetAdopt"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
        <Label 
            Text="Welcome to PetAdopt"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Logout" BackgroundColor="Black" TextColor="White" Command="{Binding LogoutCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>